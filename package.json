{
  "name": "solshuffle",
  "version": "1.0.0",
  "description": "A smol collection of efficient, stateless shuffles written in Solidity/Yul.",
  "scripts": {
    "plot:feistel": "python3 scripts/plot_feistel.py",
    "plot:swapornot": "python3 scripts/plot_swap_or_not.py",
    "benchmark": "yarn hardhat run scripts/benchmark.ts",
    "check:format": "yarn prettier --check .",
    "format": "yarn prettier --write .",
    "clean": "yarn hardhat clean",
    "build": "yarn hardhat compile",
    "test": "yarn hardhat test",
    "prepack": "yarn clean && yarn check:format && yarn test && yarn build"
  },
  "files": [
    "contracts/**/*.sol",
    "artifacts/contracts/**/*.json",
    "!artifacts/contracts/**/*.dbg.json"
  ],
  "keywords": ["solidity", "stateless", "shuffle", "nft", "random", "raffle"],
  "author": "Kevin Charm <lucky@ape.engineer>",
  "license": "Apache-2.0",
  "dependencies": {},
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@kevincharm/gfc-fpe": "^1.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "ethers": "^5.4.7",
    "hardhat": "^2.11.2",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
}
